@{
	ViewBag.Title = "Home Page";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<style>

	.body-content {
		background-color: hsla(120, 60%, 70%);
		border: outset;
		padding-top: 50px;
		padding-bottom: 50px;
		max-width: 840px;
		margin-left: 23%;
		margin-top: 8%;
		margin-bottom: 10%;
		padding-left: 2%;
	}

	.hmebtn {
		background-color: DodgerBlue;
		border: none;
		color: white;
		padding: 12px 16px;
		font-size: 16px;
		cursor: pointer;
		display: inline-grid;
		width: 200px;
		height: 100px;
		font-size: 20px;
		color: black;
	}
	

</style>


<div class="body-content">

	<div style="margin-left:87px;">
	
			<button type="submit" class="hmebtn" name="btnPets">
				<i class="fas fa-dog", style="font-size:45px"></i>
				@Html.ActionLink("Pets", "Index", "TPets")
			</button>

			<button type="submit" class="hmebtn" name="btnOwners">
				<i class="fas fa-users", style="font-size:45px"></i>
				@Html.ActionLink("Owners", "Index", "TOwners")
			</button>

			<button type="submit" class="hmebtn" name="btnServices">
				<i class="fas fa-notes-medical", style="font-size:45px"></i>
				@Html.ActionLink("Services", "Index", "TServices")
			</button>
		
	</div>

	<br />
	<br />

	<div style="margin-left:87px;">
		<button type="submit" class="hmebtn" name="btnMedications"><i class="fas fa-prescription-bottle-alt", style="font-size:45px"></i>
			@Html.ActionLink("Medications", "Index", "TMedications")
		</button>
		<button type="submit" class="hmebtn" name="btnReports"><i class="fas fa-chart-pie", style="font-size:45px"></i>
			@Html.ActionLink("Reports", "Index", "TReports")
		</button>
		<button type="submit" class="hmebtn" name="btnEmployees"><i class="fas fa-user-md", style="font-size:45px"></i>
			@Html.ActionLink("Employees", "Index", "TEmployees")
		</button>

	</div>

</div>

