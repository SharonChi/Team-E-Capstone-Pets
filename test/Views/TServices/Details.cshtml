@model test.TService

@{
    ViewBag.Title = "Details";
}

<h2>Services</h2>
<p style="margin-left: 25px; font-size:15px">

    <button class="btn-primary" onclick="location.href='@Url.Action("Index", "TServices")';return false;"><i class="fas fa-arrow-left"></i> Back To List</button>
</p>

<div class="body-content">
    <h4 style="text-decoration: none; padding-top: 10px; padding-left: 10px">
        Service Details
        <a style="color:#f0ad4e; padding-left: 15px" href='@Url.Action("Edit", "TServices", new { id = Model.intServiceID })' ;return false;>  <i class="fas fa-pencil-alt"></i></a>

    </h4>
    <hr style="margin:5px; margin-bottom: 15px" />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Description")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.strServiceDesc)
        </dd>

        <dt>
            @Html.DisplayName("Service Type")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TServiceType.strServiceType)
        </dd>

        <dt>
            @Html.DisplayName("Price")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dblPrice)
        </dd>

    </dl>
    <p>
        <button class="btn-warning" onclick="location.href='@Url.Action("Edit", "TServices", new { id = Model.intServiceID })';return false;"><i class="fas fa-pencil-alt"></i> Edit</button>
    </p>
</div>
