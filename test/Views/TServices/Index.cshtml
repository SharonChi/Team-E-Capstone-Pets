@model IEnumerable<test.TService>


@{
    ViewBag.Title = "Index";
}



<h2>Services Report</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="body-content">

	<table class="table">
		<tr>
			<th>
				Description
			</th>
			<th>
				Type
			</th>
			<th>
				Price
			</th>
		</tr>

		@foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.strServiceDesc)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TServiceType.strServiceType)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.dblPrice)
				</td>
				<td style="column-count:auto;">
					@Html.ActionLink("Edit", "Edit", new { id = item.intServiceID }, new { @class = "link-icon-edit"  })
				</td>
				<td style="column-count:auto;">
					@Html.ActionLink("Details", "Details", new { id = item.intServiceID }, new { @class = "link-icon-details" })
				</td>
				<td style="column-count:auto;">
					@Html.ActionLink("Delete", "Delete", new { id = item.intServiceID }, new { @class = "link-icon-delete" })
				</td>
			</tr>
		}

	</table>
	</div>
